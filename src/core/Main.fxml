<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox fx:controller="core.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center" prefHeight="300" prefWidth="300" spacing="10">
    <StackPane prefHeight="50.0" prefWidth="200">
        <Label fx:id="result">
            <font>
                <Font size="18"></Font>
            </font>
        </Label>
    </StackPane>
    <HBox alignment="CENTER" prefWidth="300" prefHeight="50.0" spacing="10">
        <children>
            <Button prefWidth="50.0" text="7" onAction="#processNumbers">
                <font>
                    <Font size="18.0"></Font>
                </font>
            </Button>
            <Button prefWidth="50.0" text="8" onAction="#processNumbers">
                <font>
                    <Font size="18.0"></Font>
                </font>
            </Button>
            <Button prefWidth="50.0" text="9" onAction="#processNumbers">
                <font>
                    <Font size="18.0"></Font>
                </font>
            </Button>
            <Button prefWidth="50.0" text="/" onAction="#processOps">
                <font>
                    <Font size="18.0"></Font>
                </font>
            </Button>
        </children>
    </HBox>

    <HBox alignment="CENTER" prefWidth="300" prefHeight="50.0" spacing="10">
        <children>
            <Button prefWidth="50.0" text="4" onAction="#processNumbers">
                <font>
                    <Font size="18.0"></Font>
                </font>
            </Button>
            <Button prefWidth="50.0" text="5" onAction="#processNumbers">
                <font>
                    <Font size="18.0"></Font>
                </font>
            </Button>
            <Button prefWidth="50.0" text="6" onAction="#processNumbers">
                <font>
                    <Font size="18.0"></Font>
                </font>
            </Button>
            <Button prefWidth="50.0" text="*" onAction="#processOps">
                <font>
                    <Font size="18.0"></Font>
                </font>
            </Button>
        </children>
    </HBox>

    <HBox alignment="CENTER" prefWidth="300" prefHeight="50.0" spacing="10">
        <children>
            <Button prefWidth="50.0" text="1" onAction="#processNumbers">
                <font>
                    <Font size="18.0"></Font>
                </font>
            </Button>
            <Button prefWidth="50.0" text="2" onAction="#processNumbers">
                <font>
                    <Font size="18.0"></Font>
                </font>
            </Button>
            <Button prefWidth="50.0" text="3" onAction="#processNumbers">
                <font>
                    <Font size="18.0"></Font>
                </font>
            </Button>
            <Button prefWidth="50.0" text="-" onAction="#processOps">
                <font>
                    <Font size="18.0"></Font>
                </font>
            </Button>
        </children>
    </HBox>

    <HBox alignment="CENTER" prefWidth="300" prefHeight="50.0" spacing="10">
        <children>
            <Button prefWidth="110.0" text="0" onAction="#processNumbers">
                <font>
                    <Font size="18.0"></Font>
                </font>
            </Button>
            <Button prefWidth="50.0" text="=" onAction="#processOps">
                <font>
                    <Font size="18.0"></Font>
                </font>
            </Button>
            <Button prefWidth="50.0" text="+" onAction="#processOps">
                <font>
                    <Font size="18.0"></Font>
                </font>
            </Button>
        </children>
    </HBox>
</VBox>